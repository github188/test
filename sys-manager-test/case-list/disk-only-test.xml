<?xml version="1.0" encoding="UTF-8"?>
<case>
	<command id="D01">
		<text>sys-manager disk --list</text>
		<description>查看磁盘列表</description>
	</command>

	<command id="D02">
		<text>sys-manager disk --list 0:1</text>
		<description>获取指定槽位磁盘信息</description>
	</command>

	<command id="D03">
		<text>sys-manager disk --set 0:1 --type Free</text>
		<description>设置指定槽位磁盘为空闲盘</description>
	</command>

	<command id="D04">
		<text>sys-manager disk --get-detail 0:1</text>
		<description>获取指定槽位磁盘详细信息</description>
	</command>

	<work_flow>
		<step cmd_id="D01"/>
	</work_flow>
</case>
